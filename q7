#include <iostream>
using namespace std;
struct Node{ int data; Node* next; };
void display(Node* tail){
    if(!tail){ cout<<"Empty\n"; return; }
    Node* p=tail->next;
    do{ cout<<p->data<<" "; p=p->next; }while(p!=tail->next);
    cout<<endl;
}
int main(){
    Node *t1=NULL,*t2=NULL,*p;
    int n1,n2,x;
    cout<<"Enter size of first CLL: "; cin>>n1;
    for(int i=0;i<n1;i++){ cin>>x; p=new Node; p->data=x;
        if(!t1){ t1=p; t1->next=t1; } else { p->next=t1->next; t1->next=p; t1=p; } }
    cout<<"Enter size of second CLL: "; cin>>n2;
    for(int i=0;i<n2;i++){ cin>>x; p=new Node; p->data=x;
        if(!t2){ t2=p; t2->next=t2; } else { p->next=t2->next; t2->next=p; t2=p; } }
    cout<<"CLL1: "; display(t1);
    cout<<"CLL2: "; display(t2);
    // Concatenate
    Node* h1=t1->next; Node* h2=t2->next;
    t1->next=h2; t2->next=h1;
    cout<<"After concatenation: "; display(t2);
}
